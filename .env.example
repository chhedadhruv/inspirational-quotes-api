# Environment Variables Example for Quote API
# Copy this file to .env and modify the values as needed

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=60

# Security Headers
HELMET_ENABLED=true

# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Database Configuration (if you plan to add a database later)
# DATABASE_URL=mongodb://localhost:27017/quotes
# DATABASE_NAME=quotes

# Cache Configuration (if you plan to add caching)
# CACHE_TTL=3600
# REDIS_URL=redis://localhost:6379

# Monitoring and Health Check
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Development Tools
DEBUG=false
PRETTY_PRINT_JSON=true
